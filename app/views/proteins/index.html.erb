<h1>
  Proteins
</h1>

<table>
  <% @proteins.each do |protein| %>
    <tr>
      <td><%= link_to "#{protein.name}", protein_path(protein) %></td>
      <td><%= link_to 'edit', edit_protein_path(protein) %></td>
      <td><%= link_to 'remove', protein_path(protein), method: :delete %></td>
    </tr>
  <% end %>
</table>

 <%= form_for :protein, url: proteins_path do |f| %>
   <div class="row">
     <div class="large-4 columns">
       <label>New Protein Name
         <%= f.text_field :name %>
       </label>
     </div>

     <div class="large-6 columns">
       <%= f.submit "Save New Protein"%>
     </div>
   </div>
  </div>
 <% end %>
