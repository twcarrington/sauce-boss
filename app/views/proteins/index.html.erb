<h1>
  PROTEINS INDEX
</h1>

<table>
  <% @proteins.each do |protein| %>
    <tr>
      <td><%= link_to "#{protein.name}", protein_path(protein) %></td>
      <td><%= link_to 'edit', edit_protein_path(protein) %></td>
      <td><%= link_to 'remove' %></td>
    </tr>
  <% end %>
</table>

<form>
  <div class="row">
    <div class="large-4 columns">
      <label>New Protein Name
        <input type="text" placeholder="" />
      </label>
    </div>

    <div class="large-6 columns">
      <a href="#" class="button">Save New Protein</a>
    </div>    
  </div>

</form>


